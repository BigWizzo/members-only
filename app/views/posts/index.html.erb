<div class="container">
<h1>Posts</h1>

    <% @posts.each do |post| %>
    <div class="card">
        <% if user_signed_in? %>
        <div class="card-header">
          <%= post.user.name %>
        </div>
        <% end %> 
       <div class="card-body">
         <h5 class="card-title"> <%= post.title %></h5>
         <p class="card-text"> <%= post.body %></p>
       </div>
    </div>
    <% end %>

<br>

<%= link_to 'New Post', new_post_path %><br/>

<% if user_signed_in? %>
<%= link_to "Logout", destroy_user_session_path, method: :delete  %>
<% end %>
</div>
